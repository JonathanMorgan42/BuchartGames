# ===========================================
# Game Night Tracker - Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env.production and update all values
# Never commit .env.production to version control

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING_IN_PRODUCTION

# Admin Credentials
# IMPORTANT: Change these default credentials immediately!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Developer Admin (Optional - remove in production if not needed)
DEVADMIN_USERNAME=devadmin
DEVADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Logging
LOG_LEVEL=INFO

# Database Configuration
# SQLite is used by default - stored in /app/instance/gamenight.db
# The instance folder is mounted as a volume for persistence

# Gunicorn Configuration (optional overrides)
# WORKERS=4
# THREADS=2
# TIMEOUT=120

# Application Settings
# HOST=0.0.0.0
# PORT=8000
