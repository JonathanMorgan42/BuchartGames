[MASTER]
# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

# Files or directories to be skipped
ignore=migrations,tests,instance

# Use multiple processes to speed up Pylint
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for this project
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name (for variables like id, db)
    R0903,  # too-few-public-methods (common in models)
    W0511,  # fixme (TODO comments)
    R0801,  # duplicate-code (common in tests)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# String used as indentation unit
indent-string='    '

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,db,id,_

[DESIGN]
# Maximum number of arguments for function / method
max-args=7

# Maximum number of attributes for a class
max-attributes=10

# Maximum number of branch for function / method body
max-branches=15
